@model IEnumerable<DayTide.Models.DeleveryMan>

@{
    Layout = "~/Views/Shared/_Layout_Moderator.cshtml";
}

<style>
    div.gallery {
        margin: 5px;
        border: 1px solid #ccc;
        float: left;
        width: 120px;
    }

        div.gallery img {
            width: 100%;
            height: auto;
        }

    div.desc {
        padding: 15px;
        text-align: center;
    }

    .warn {
        color: #756e15;
        background: #fffbd1;
        border: 1px solid #87803e;
        width: 100%;
        text-align: center;
    }
</style>


<div class="container" style="color:#4e73df">
    <h2 style="color:#4e73df"><b>DeliveryMan(@ViewData["Address"] Area)</b></h2>
    <form>
        <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Picture)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Complete_Task)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.In_Service)
                </th>
                <th>
                    <p>Action</p>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        <div class="gallery">
                            <a target="_blank" href="img_5terre.jpg">
                                <img src="~/Content/Users/@item.Picture" alt="@item.Picture" width="400" height="250">
                            </a>
                            @*<div class="desc">Add a description of the image here</div>*@
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Complete_Task)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.In_Service)
                    </td>
                    <td>
                        @if (item.In_Service == 1)
                        {
                            <a href="#" class="btn btn-success disabled">Appointed</a>
                        }
                        else
                        {
                            <a href="/Moderator/Appointed/?id=@item.DelManId&Address=@item.Address&OrderId=@ViewData["OrderId"]" class="btn btn-facebook">Appoint</a>
                        }
                    </td>
                </tr>
            }
        </table>
    </form>

</div>
